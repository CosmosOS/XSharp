{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet-build",
            "type": "shell",
            // Ask msbuild to generate full paths for file names.
            // https://stackoverflow.com/questions/49826816/vscode-unable-to-open-file-cs-file-not-found
            "command": "dotnet build /property:GenerateFullPaths=true",
            "options": {
                "cwd": "${workspaceFolder}\\source\\XSharp\\XSC\\"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": [
                "Build Extension"
            ]
        },
        {
            "label": "Copy xsc.exe",
            "type": "shell",
            "command": "xcopy",
            "args": [
                ".\\source\\XSharp\\XSC\\bin\\Debug\\net472\\",
                ".\\source\\VsCode\\XSharp.VSCode\\xsc",
                "/Y"
            ],
            "group": "build"
        },
        {
            "label": "Build Extension",
            "type": "typescript",
            "tsconfig": "source/VsCode/XSharp.VSCode/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "dependsOn": [
                "Copy xsc.exe"
            ]
        }
    ]
}
