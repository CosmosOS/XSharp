    "version": "0.2.0",
    "configurations": [
        {
            "name": "X# Playground",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet-build",
            "program": "${workspaceFolder}\\source\\XSharp\\XSC\\bin\\Debug\\netcoreapp2.0\\xsc.dll",
            "args": [
                "..\\..\\..\\playground\\",
                //"-Plugin:Cosmos.XSC",
                "-Gen2", "-WaitOnError"
            ],
            "cwd": "${workspaceFolder}\\source\\XSharp\\XSC",
            "stopAtEntry": false,
            "console": "internalConsole"
        },

        {
            "name": "X# (472) Playground",
